#include<iostream>
#include<vector>
#include<map>

using namespace std;

float solve(int n)
{
	float ans = 0.5;
	float i = 1;
	while (i <= n)
	{
		ans += (2.0 * i + 1) / (2.0 * i + 2);
		i += 1.0;
	}
	return ans;
}


int main()
{
	int n; cin >> n;
	float ans = solve(n);
	cout << 1.0 * ans;


	return 0;
}
